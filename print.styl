/* 変数定義 */
fonts = "游明朝", YuMincho, "ヒラギノ明朝 ProN W3", "Hiragino Mincho ProN","HG明朝E","ＭＳ Ｐ明朝","ＭＳ 明朝",serif
font-size = 14pt

body
    font font-size fonts
    background white

article.print_page
    width 182mm
    height 257mm
    page-break-after always

    :last-child
        page-break-after auto

section
    clear all

h2
    display none

dt
    float left
    border solid 0.5mm black

dd
    border solid 0.5mm black

table
    border solid 1mm black
    border-collapse collapse
    width 100%

th, td
    border solid 1mm black
    border-collapse collapse

td
    border solid 0.5mm black
    text-align center
